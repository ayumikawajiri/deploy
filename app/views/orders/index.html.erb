<div class="body">

  <p id="notice"><%= notice %></p>

  <div class="breadcrumbs" >
    <%= render_breadcrumbs separator: ' > ' %>
  </div>

  <h1 class="h1-text">購入履歴一覧</h1>

  <div class="section">
    <div class="clearfix">
        <div class="right index_section_page"><%= paginate(@orders) %><br><br></div>
    </div>
    <table>
      <thead>
        <tr>
          <th width="10%">注文ID</th>
          <th width="20%">商品名</th>
          <th width="25%">購入した<br>ユーザー</th>
          <th width="20%">購入金額</th>
          <th width="25%">購入日</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td align="center"><%= link_to order.id, order_path(order.id) %></td>
            <td align="center"><%= link_to order.post.title, post_path(order.post_id) %></td>
            <td align="center"><%= link_to order.user.username, user_path(order.user_id) %></td>
            <td align="center"><%= number_to_currency(order.post.price, :precision => 0, :unit => '¥') %></td>
            <td align="center"><%= order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>