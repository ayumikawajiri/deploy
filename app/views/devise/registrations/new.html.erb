
<div class="body">
  <div class="breadcrumbs" >
    <%= render_breadcrumbs separator: ' > ' %>
  </div>

  <h1 class="h1-text">アカウント登録</h1>

  <div class="section">
    <div class="form">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>  
        <P><%= devise_error_messages! %></P>

        <div class="field">
          <%= f.label "ユーザーネーム" %>
          <%= f.text_field :username, :size=>"65x1", autofocus: true %>
        </div>

        <div>
          <% if user_signed_in? %>
            <% if current_user.admin? %>
              <div class="field clearfix">
                <p class="left"><%= f.check_box :admin, { }, true, false %></p>
                <p class="left"><%= f.label "管理者として登録する" %></p>
              </div>
            <% end %>
          <% end %>
        </div>

        <div class="field">
          <%= f.label "メールアドレス" %>
          <%= f.email_field :email, :size=>"65x1", autofocus: true %>
        </div>

        <div class="field">
          <%= f.label "パスワード" %>
          <%= f.password_field :password, :size=>"65x1", autocomplete: "off" %>
        </div>

        <div class="field">
          <%= f.label "パスワードの確認" %>
          <%= f.password_field :password_confirmation, :size=>"65x1", autocomplete: "off" %>
        </div>

        <div class="actions button">
          <%= f.submit "登録する" %>
        </div>
      <% end %>
      <div class="navigate">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
