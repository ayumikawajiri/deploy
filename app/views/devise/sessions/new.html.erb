
<div class="body">
  <h1 class="h1-text">ログイン</h1>

  <div class="section">
    <div class="form">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label "メールアドレス" %>
          <%= f.email_field :email, :size=>"65x1", autofocus: true %>
        </div>

        <div class="field">
          <%= f.label "パスワード" %>
          <%= f.password_field :password, :size=>"65x1", autocomplete: "off" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field clearfix">
            <p class="left"><%= f.check_box :remember_me %></p>
            <p class="left"><%= f.label "記憶する" %></p>
          </div>
        <% end -%>

        <div class="actions button">
          <%= f.submit "ログイン" %>
        </div>
      <% end %>
    </div>

    <div class="navigate clearfix">
      <div class="right">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
