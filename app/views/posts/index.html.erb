<p id="notice"><%= notice %></p>

<h1>商品一覧</h1>

<table>
  <thead>
    <tr>
    　<th>イメージ</th>
      <th>商品</th>
      <th>価格</th>
      <th>紹介</th>
      <th>出品者</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.reverse_each do |post| %>
      <tr>
        <% if post.image? %>
          <td><%= post_tag post.image.url %></td>
        <% else %>
          <td>No Image</td>
        <% end %>
        <td><%= link_to post.title, post_path(post) %></td>
        <td><%= number_to_currency(post.price, :precision => 0, :unit => '¥') %></td>
        <td><%= post.body %></td>
        <td><%= post.user.username %></td>        
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @posts %>
<br>

