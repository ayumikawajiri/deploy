<%= form_with(model: post, local: true) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %>件のエラーが出ています。</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label "商品名" %>
    <%= form.text_field :title, id: :post_title %>
  </div>

  <div class="field">
    <%= form.label "価格" %>
    <%= form.number_field :price, id: :post_price %>
  </div>

  <div class="field">
    <%= form.label "紹介" %>
    <%= form.text_area :body, id: :post_body %>
  </div>

  <div class="actions">
    <%= form.submit "出品する" %>
  </div>
<% end %>
