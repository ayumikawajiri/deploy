
<div class="body">
  <div class="breadcrumbs" >
    <%= render_breadcrumbs separator: ' > ' %>
  </div>

  <h1 class="h1-text">ユーザー一覧</h1>

  <div class="section">
	<table class="user_table">
  	  <thead>
  		<tr>
	  	  <th width="20%">ユーザー<br>ネーム</th>
	  	  <th width="30%">メール<br>アドレス</th>
	  	  <th width="30%">アカウント<br>作成日</th>
	  	  <th width="20%">ステータス</th>
		</tr>
  	  </thead>
  	  <tbody>
		<% @users.each do |user| %>
	  	  <tr>
	    	<td height="30px" align="center"><%= link_to user.username, "/users/#{user.id}" %></td>
	    	<td height="30px" align="center"><%= user.email %></td>
	    	<td height="30px" align="center"><%= user.created_at.strftime("%Y/%m/%d") %></td>
	    	<% if user.admin? %>
	    	  <td height="30px" align="center">管理者</td>
	    	<% else %>
	    	  <td height="30px" align="center">ユーザー</td>
	    	<% end %>
	  	  </tr>
		<% end %>
  	  </tbody>
	</table>
  </div>
</div>
